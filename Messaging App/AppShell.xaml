<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Messaging_App.Views"
       x:Class="Messaging_App.AppShell"
       FlyoutBehavior="Disabled">

    <ShellContent Route="login" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="mainpage" ContentTemplate="{DataTemplate views:MainPage}" />
    <ShellContent Route="signup" ContentTemplate="{DataTemplate views:SignUpPage}" />
    <ShellContent Route="searchusers" ContentTemplate="{DataTemplate views:SearchUsersPage}" />
    <ShellContent Route="conversation" ContentTemplate="{DataTemplate views:ConversationPage}" />
    
</Shell>
